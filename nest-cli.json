{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api-server",
      "entryFile": "main",
      "sourceRoot": "apps/api-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-server/tsconfig.build.json"
      }
    },
    "projector": {
      "type": "application",
      "root": "apps/proj-docs",
      "entryFile": "main",
      "sourceRoot": "apps/proj-docs/src",
      "compilerOptions": {
        "tsConfigPath": "apps/proj-docs/tsconfig.build.json"
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },
    "domain": {
      "type": "library",
      "root": "libs/domain",
      "entryFile": "index",
      "sourceRoot": "libs/domain/src",
      "compilerOptions": {
        "tsConfigPath": "libs/domain/tsconfig.lib.json"
      }
    },
    "mongo": {
      "type": "library",
      "root": "libs/infrastructure/mongo",
      "entryFile": "index",
      "sourceRoot": "libs/infrastructure/mongo/src",
      "compilerOptions": {
        "tsConfigPath": "libs/infrastructure/mongo/tsconfig.lib.json"
      }
    }
  },
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  }
}

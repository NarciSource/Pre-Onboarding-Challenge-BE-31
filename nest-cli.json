{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "projects": {
    "api": {
      "type": "application",
      "root": "api-server",
      "entryFile": "main",
      "sourceRoot": "api-server/src",
      "compilerOptions": {
        "tsConfigPath": "api-server/tsconfig.build.json"
      }
    },
    "worker": {
      "type": "application",
      "root": "projection-worker",
      "entryFile": "main",
      "sourceRoot": "projection-worker/src",
      "compilerOptions": {
        "tsConfigPath": "projection-worker/tsconfig.build.json"
      }
    }
  },
  "compilerOptions": {
    "deleteOutDir": true
  }
}

{
  "name": "postgres-category-connector",
  "config": {
    "connector.class": "io.debezium.connector.postgresql.PostgresConnector",

    "database.hostname": "${PG_HOST}",
    "database.port": "${PG_PORT}",
    "database.user": "${PG_USERNAME}",
    "database.password": "${PG_PASSWORD}",
    "database.dbname": "${PG_DATABASE}",

    "slot.name": "category_slot",
    "plugin.name": "pgoutput",

    "snapshot.mode": "initial",

    "table.include.list": "public.categories",

    "topic.prefix": "postgres",
    "message.key.columns": "public.categories:id",

    "key.converter": "org.apache.kafka.connect.converters.LongConverter",

    "value.converter": "io.apicurio.registry.utils.converter.AvroConverter",
    "value.converter.apicurio.registry.url": "http://apicurio:8080/apis/registry/v2",
    "value.converter.apicurio.registry.auto-register": true,
    "value.converter.apicurio.registry.find-latest": true,
    "value.converter.apicurio.registry.use-id": "globalId",
    "value.converter.apicurio.registry.headers.enabled": false,
    "value.converter.apicurio.registry.as-confluent": true,

    "schema.name.adjustment.mode": "avro",

    "decimal.handling.mode": "double",

    "transforms": "ExtractKey,ExtractNewRecordState,RouteByTable",

    "transforms.ExtractKey.type": "org.apache.kafka.connect.transforms.ExtractField\u0024Key",
    "transforms.ExtractKey.field": "id",

    "transforms.ExtractNewRecordState.type": "io.debezium.transforms.ExtractNewRecordState",
    "transforms.ExtractNewRecordState.drop.tombstones": "true",
    "transforms.ExtractNewRecordState.delete.handling.mode": "rewrite",
    "transforms.ExtractNewRecordState.add.fields": "op,table",
    "transforms.ExtractNewRecordState.add.headers": "db",

    "transforms.RouteByTable.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.RouteByTable.regex": "(.*).public.(.*)",
    "transforms.RouteByTable.replacement": "$1_$2"
  }
}

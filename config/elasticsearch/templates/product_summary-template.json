{
  "index_patterns": ["product_summary"],

  "template": {
    "settings": {
      "number_of_shards": 1,
      "analysis": {
        "analyzer": {
          "korean": {
            "type": "custom",
            "tokenizer": "nori_tokenizer",
            "filter": ["lowercase", "nori_readingform", "korean_stop"],
            "char_filter": ["html_strip"]
          }
        },
        "tokenizer": {
          "nori_tokenizer": {
            "type": "nori_tokenizer",
            "decompound_mode": "mixed"
          }
        },
        "filter": {
          "korean_stop": {
            "type": "stop",
            "stopwords": ["의", "가", "은", "는"]
          }
        }
      }
    },

    "mappings": {
      "properties": {
        "name": {
          "type": "text",
          "analyzer": "korean",
          "fields": {
            "keyword": { "type": "keyword" }
          }
        },
        "slug": { "type": "keyword" },
        "short_description": { "type": "text", "analyzer": "korean" },
        "created_at": { "type": "long" },
        "updated_at": { "type": "long" },
        "status": { "type": "keyword" },

        "brand": {
          "properties": {
            "id": { "type": "long" },
            "name": {
              "type": "text",
              "analyzer": "korean",
              "fields": {
                "keyword": { "type": "keyword" }
              }
            }
          }
        },
        "seller": {
          "properties": {
            "id": { "type": "long" },
            "name": {
              "type": "text",
              "analyzer": "korean",
              "fields": {
                "keyword": { "type": "keyword" }
              }
            }
          }
        },

        "primary_image": {
          "properties": {
            "url": { "type": "keyword" },
            "alt_text": { "type": "text", "analyzer": "korean" }
          }
        },

        "base_price": { "type": "float" },
        "sale_price": { "type": "float" },
        "currency": { "type": "keyword" },

        "in_stock": { "type": "boolean" },

        "rating": { "type": "float" },
        "review_count": { "type": "long" }
      }
    }
  }
}

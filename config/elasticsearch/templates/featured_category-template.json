{
  "index_patterns": ["featured_category"],

  "template": {
    "settings": {
      "number_of_shards": 1,
      "analysis": {
        "analyzer": {
          "korean": {
            "type": "custom",
            "tokenizer": "nori_tokenizer",
            "filter": ["lowercase", "nori_readingform", "korean_stop"],
            "char_filter": ["html_strip"]
          }
        },
        "tokenizer": {
          "nori_tokenizer": {
            "type": "nori_tokenizer",
            "decompound_mode": "mixed"
          }
        },
        "filter": {
          "korean_stop": {
            "type": "stop",
            "stopwords": ["의", "가", "은", "는"]
          }
        }
      }
    },

    "mappings": {
      "properties": {
        "name": {
          "type": "text",
          "analyzer": "korean",
          "fields": {
            "keyword": { "type": "keyword" }
          }
        },
        "slug": { "type": "keyword" },
        "image_url": { "type": "keyword" },
        "product_count": { "type": "integer" }
      }
    }
  }
}
